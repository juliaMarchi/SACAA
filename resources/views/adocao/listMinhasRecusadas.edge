<div>
    <ul class="grid lg:grid-cols-4 md:grid-cols-2 sm:grid-cols-1 gap-4">
        @each(adocaos in recusados.list)
            @component('components/card')
                @slot('header')
                    <img src="https://images.unsplash.com/photo-1591017320663-dc3334ff1dcc?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2000&q=80" alt="Foto do animal">
                    <a href="/animais/{{ adocaos.animal.id }}">{{ adocaos.animal.nome }}</a>
                @endslot
                @slot('body')
                    <p>{{ adocaos.animal.tipoAnimal.descricao }}</p>
                    <p>{{ adocaos.animal.sexo }}</p>
                    <p>{{ adocaos.animal.raca }}</p>
                    <p>{{ adocaos.animal.porte }}</p>
                @endslot
                @slot('footer')
                    <p>Adoção recusada</p>
                @endslot
            @endcomponent
        @endeach
    </ul>            
</div>